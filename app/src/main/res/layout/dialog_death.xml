<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/container"
    android:padding="30dp">

    <com.example.project2_rev2.xmlElements.TypeWriter
        android:id="@+id/txtDeath_deathDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="YOU DIED"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="60sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/btnHome_deathDialog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtDeath_deathDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/start_wave_button_background_active">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"

            android:text="Home"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
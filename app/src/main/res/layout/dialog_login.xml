<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dialogColor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <EditText
            android:id="@+id/edtMail_loginDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"

            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/email_icon_custom"
            android:drawablePadding="3dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/secondaryTextColor"
            android:textColorHint="@color/secondaryTextColor" />

        <EditText
            android:id="@+id/edtPassword_loginDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/edtMail_loginDialog"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/lock_icon_custom"
            android:drawablePadding="3dp"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/secondaryTextColor"
            android:textColorHint="@color/secondaryTextColor" />

        <Button
            android:id="@+id/btnLogin_loginDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/edtPassword_loginDialog"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="login"
            android:textSize="20dp"
            app:cornerRadius="20dp" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="350dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/btnLogin_loginDialog"
            android:layout_centerHorizontal="true"
            android:src="@color/white" />

        <Button
            android:id="@+id/btnGoogle_loginDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"

            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="Login With Google"
            android:textAllCaps="false"

            android:textSize="20dp"
            app:cornerRadius="20dp" />

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btnGoogle_loginDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"

                android:text="@string/have_account"
                android:textColor="@color/secondaryTextColor"/>

            <TextView
                android:id="@+id/txtRegister_loginDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"

                android:text="@string/send_login"
                android:textColor="@color/link" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ln"
            android:layout_marginLeft="2dp"

            android:text="@string/Google_login"
            android:textColor="@color/secondaryTextColor" />

    </RelativeLayout>

</LinearLayout>
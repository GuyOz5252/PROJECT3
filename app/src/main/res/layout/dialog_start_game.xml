<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack_startGameDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_cancel" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

        <Button
            android:id="@+id/btnNewGame_startGameDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new game"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:drawableTint="@color/text_color"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/ic_play"
            android:backgroundTint="@color/transparent" />

        <Button
            android:id="@+id/btnLoadGame_startGameDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="load save"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:drawableTint="@color/text_color"
            android:textColor="@color/text_color"
            android:drawableTop="@drawable/ic_floppy_disk"
            android:backgroundTint="@color/transparent" />

    </LinearLayout>

</RelativeLayout>
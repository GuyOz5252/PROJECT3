<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.TowerUpgradeInfo"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/btnBack_towerUpgradeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_cancel" />

    <TextView
        android:id="@+id/towerName_towerUpgradeInfo"
        style="@style/mainText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:text="tower name" />

    <LinearLayout
        android:id="@+id/towerUpgradeCard_prev"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lv"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-20dp"
        android:layout_toStartOf="@+id/lv"
        android:alpha="0.6"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:scaleX="0.6"
        android:scaleY="0.6" />

    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <ImageButton
            android:id="@+id/btnPrevUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_left_arrow" />

        <LinearLayout
            android:id="@+id/towerUpgradeCard_curr"
            android:layout_width="210dp"
            android:layout_height="240dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/towerUpgradeCard_curr_pathOne"
                android:layout_width="210dp"
                android:layout_height="117dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corners"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Upgrade Name"
                    android:textColor="@color/on_container_text_color"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="upgrade info"
                    android:textColor="@color/on_container_secondary_text_color"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/towerUpgradeCard_curr_pathTwo"
                android:layout_width="210dp"
                android:layout_height="117dp"
                android:background="@drawable/rounded_corners"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Upgrade Name"
                    android:textColor="@color/on_container_text_color"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="upgrade info"
                    android:textColor="@color/on_container_secondary_text_color"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnNextUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/towerUpgradeCard_next"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lv"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/lv"
        android:alpha="0.6"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleX="0.6"
        android:scaleY="0.6" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/container">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:padding="30dp">

        <EditText
            android:id="@+id/edtMail_registerDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/email_icon_custom"
            android:drawablePadding="3dp"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/on_container_text_color"
            android:textColorHint="@color/on_container_text_color" />

        <EditText
            android:id="@+id/edtUsername_registerDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMail_registerDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/pen_icon_custom"
            android:drawablePadding="3dp"
            android:hint="username"
            android:inputType="text"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/on_container_text_color"
            android:textColorHint="@color/on_container_text_color" />

        <EditText
            android:id="@+id/edtPassword_registerDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUsername_registerDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/lock_icon_custom"
            android:drawablePadding="3dp"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/on_container_text_color"
            android:textColorHint="@color/on_container_text_color" />

        <EditText
            android:id="@+id/edtConPassword_registerDialog"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPassword_registerDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_text_custom"
            android:drawableStart="@drawable/lock_icon_custom"
            android:drawablePadding="3dp"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:paddingVertical="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/on_container_text_color"
            android:textColorHint="@color/on_container_text_color" />

        <Button
            android:id="@+id/btnRegister_registerDialog"
            style="@style/buttonInContainer"
            android:layout_width="300dp"
            android:layout_below="@+id/edtConPassword_registerDialog"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="register" />

    </RelativeLayout>

</LinearLayout>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Project3" parent="Theme.Material3.Light">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/material_on_surface_stroke</item>
    </style>

    <style name="mainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="baseButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="button" parent="baseButton">
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:textColor">@color/on_container_text_color</item>
    </style>

    <style name="buttonInContainer" parent="baseButton">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="text_style">
        <item name="fontFamily">sans-serif-black</item>
    </style>

</resources>